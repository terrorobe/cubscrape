{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    
    /* TypeScript migration - transitioning to stricter settings */
    "allowJs": true,
    "checkJs": false,
    "strict": false,  // Keep false during migration, plan to enable later
    "noUnusedLocals": false,  // Enable after fixing all type issues
    "noUnusedParameters": false,  // Enable after fixing all type issues
    "noFallthroughCasesInSwitch": true,
    
    /* Enhanced type checking for better development experience */
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": false,  // May enable later for extra safety
    "exactOptionalPropertyTypes": false,  // Too strict for current codebase
    
    /* Path mapping for clean imports */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    
    /* Vue.js and modern JavaScript support */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,  // Not needed for application builds
    "declarationMap": false,  // Not needed for application builds
    "sourceMap": false  // Handled by Vite
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [{ "path": "./tsconfig.node.json" }],
  
  // TypeScript Migration Roadmap:
  // Phase 1: âœ… Convert all .js files to .ts (completed)
  // Phase 2: âœ… Add comprehensive type definitions (completed)
  // Phase 3: âœ… Configure build pipeline and CI/CD (completed)
  // Phase 4: ðŸš§ Fix remaining type errors in Vue components (in progress)
  // Phase 5: ðŸ“‹ Enable strict mode and stricter type checking (future)
  // Phase 6: ðŸ“‹ Add noUncheckedIndexedAccess for extra runtime safety (future)
}
