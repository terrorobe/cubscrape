{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    
    /* Performance optimizations */
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    
    /* TypeScript migration - transitioning to stricter settings */
    "allowJs": true,
    "checkJs": false,
    "strict": false,  // Keep false during migration, plan to enable later
    "noImplicitAny": false,  // Gradually enable as migration progresses
    "strictNullChecks": false,  // Will enable in phase 5
    "strictFunctionTypes": true,  // Safe to enable now
    "strictBindCallApply": true,  // Safe to enable now
    "noUnusedLocals": false,  // Enable after fixing all type issues
    "noUnusedParameters": false,  // Enable after fixing all type issues
    "noFallthroughCasesInSwitch": true,
    
    /* Enhanced type checking for better development experience */
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": false,  // May enable later for extra safety
    "exactOptionalPropertyTypes": false,  // Too strict for current codebase
    "noImplicitOverride": true,  // Modern class best practices
    "noPropertyAccessFromIndexSignature": false,  // Too restrictive during migration
    
    /* Path mapping for clean imports */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    
    /* Vue.js and modern JavaScript support */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,  // Not needed for application builds
    "declarationMap": false,  // Not needed for application builds
    "sourceMap": false  // Handled by Vite
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
