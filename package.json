{
  "name": "cubscrape-vue",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:vite": "vite",
    "stop-dev": "node scripts/stop-dev.js",
    "build": "node scripts/generate-app-version.js && npm run type-check:all && vite build",
    "preview": "vite preview",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint .",
    "lint:css": "stylelint 'src/**/*.css' '**/*.vue'",
    "lint:html": "htmlhint 'index.html' 'public/**/*.html'",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js:fix": "eslint . --fix",
    "lint:css:fix": "stylelint 'src/**/*.css' '**/*.vue' --fix",
    "format": "prettier --write 'src/**/*.{js,ts,vue,css}' 'scripts/**/*.js' '*.{js,json,css,html}'",
    "format:check": "prettier --check 'src/**/*.{js,ts,vue,css}' 'scripts/**/*.js' '*.{js,json,css,html}'",
    "build-db": "uv run cubscrape build-db",
    "type-check": "tsc --noEmit",
    "type-check:vue": "vue-tsc --noEmit",
    "type-check:all": "npm run type-check && npm run type-check:vue",
    "type-check:watch": "vue-tsc --noEmit --watch",
    "ci:check": "npm run format:check && npm run lint && npm run type-check:all"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.1",
    "glob": "^11.0.3",
    "sql.js": "^1.11.0",
    "vue": "^3.5.22",
    "vue-tsc": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^24.6.1",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/typescript-plugin": "^3.1.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-better-tailwindcss": "^3.7.9",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.5.0",
    "globals": "^16.4.0",
    "htmlhint": "^1.7.1",
    "postcss": "^8.4.49",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.3",
    "vite": "^7.1.7"
  }
}
