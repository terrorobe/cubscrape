{
  "name": "cubscrape-vue",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:vite": "vite",
    "stop-dev": "node scripts/stop-dev.js",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .vue,.js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write 'src/**/*.{js,vue,css}' 'scripts/**/*.js' '*.{js,json,css,html}'",
    "format:check": "prettier --check 'src/**/*.{js,vue,css}' 'scripts/**/*.js' '*.{js,json,css,html}'",
    "build-db": "uv run cubscrape build-db"
  },
  "dependencies": {
    "sql.js": "^1.11.0",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@vitejs/plugin-vue": "^6.0.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-better-tailwindcss": "^3.7.1",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-vue": "^10.3.0",
    "postcss": "^8.4.49",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.11",
    "vite": "^7.0.5"
  }
}
